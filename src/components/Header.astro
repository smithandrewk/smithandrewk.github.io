---
const pathname = Astro.url.pathname;

const navLinks = [
  { href: '/about', label: 'About' },
  { href: '/blog', label: 'Journal' },
  { href: '/gallery', label: 'Gallery' },
  { href: '/timeline', label: 'Timeline' },
  { href: '/consuming', label: 'Consuming' },
];

function isActive(href: string): boolean {
  return pathname.startsWith(href);
}
---

<header class="fixed top-0 left-0 right-0 z-50 bg-cream/90 backdrop-blur-sm">
  <nav class="max-w-6xl mx-auto px-6">
    <div class="flex items-center justify-between h-14 border-b border-walnut/10">
      <!-- Logo -->
      <a href="/" class="font-serif text-lg text-walnut hover:text-cognac transition-colors">
        A. Smith
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-8">
        {navLinks.map(link => (
          <a
            href={link.href}
            class:list={[
              "text-xs tracking-widest uppercase transition-colors",
              isActive(link.href)
                ? "text-walnut"
                : "text-warm-gray hover:text-walnut"
            ]}
          >
            {link.label}
          </a>
        ))}
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="md:hidden p-2 -mr-2 text-warm-gray hover:text-walnut transition-colors"
        aria-label="Menu"
        aria-expanded="false"
      >
        <svg id="menu-icon" class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg id="close-icon" class="w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </nav>

  <!-- Mobile Navigation -->
  <div id="mobile-menu" class="hidden md:hidden bg-cream border-b border-walnut/10">
    <div class="max-w-6xl mx-auto px-6 py-4 flex flex-col gap-4">
      {navLinks.map(link => (
        <a
          href={link.href}
          class:list={[
            "text-xs tracking-widest uppercase transition-colors",
            isActive(link.href)
              ? "text-walnut"
              : "text-warm-gray hover:text-walnut"
          ]}
        >
          {link.label}
        </a>
      ))}
    </div>
  </div>
</header>

<!-- Spacer for fixed header -->
<div class="h-14"></div>

<script>
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');

  button?.addEventListener('click', () => {
    const isExpanded = button.getAttribute('aria-expanded') === 'true';
    button.setAttribute('aria-expanded', String(!isExpanded));
    menu?.classList.toggle('hidden');
    menuIcon?.classList.toggle('hidden');
    closeIcon?.classList.toggle('hidden');
  });
</script>
