---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<Layout title={post.data.title} description={post.data.description}>
  <article class="max-w-3xl mx-auto px-6 py-16 md:py-24">

    <header class="mb-12">
      <a href="/blog" class="text-xs text-warm-gray tracking-widest uppercase hover:text-walnut transition-colors">
        &larr; Journal
      </a>

      <h1 class="font-serif text-3xl md:text-4xl text-walnut leading-tight mt-8 mb-4">
        {post.data.title}
      </h1>

      <time class="text-sm text-warm-gray">
        {new Date(post.data.date).toLocaleDateString('en-US', {
          year: 'numeric',
          month: 'long',
          day: 'numeric'
        })}
      </time>
    </header>

    <div class="prose">
      <Content />
    </div>

    <footer class="mt-16 pt-8 border-t border-walnut/10">
      <a href="/blog" class="text-xs text-warm-gray tracking-widest uppercase hover:text-walnut transition-colors">
        &larr; Back to Journal
      </a>
    </footer>

  </article>
</Layout>
